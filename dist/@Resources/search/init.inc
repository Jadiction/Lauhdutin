[Script]
Measure=Script
ScriptFile=#@#search\init.lua
UpdateDivider=-1

;#WindowBackgroundColor#
[Input]
Measure=Plugin
Plugin=InputText
SolidColor=#WindowBackgroundColor#
X=10
Y=(#TitleBarHeight# + (#WindowHeight# - #TitleBarHeight#) / 2 - 12 + 4)
W=(#WindowWidth# - 20)
H=24
DefaultValue=
StringAlign=Center
StringStyle=Bold
FontSize=12
FontColor=#WindowSlotValueFontColor#
DynamicVariables=1
Command1=[!CommandMeasure "Script" "SetInput('$UserInput$;')"]
OnDismissAction=[!CommandMeasure "Script" "CancelInput()"]

@include=#@#colors.inc

[Variables]
SkinWidth=464
SkinHeight=100
WindowWidth=460
WindowHeight=96
TitleBarHeight=48
BottomButtonHeight=64
ScrollbarWidth=16
ButtonDiffX=-9
ButtonDiffY=-3
ButtonHeight=49

[WindowShadow]
Meter=Image
X=0
Y=0
W=(#WindowWidth# + 4)
H=(#WindowHeight# + 4)
SolidColor=#WindowShadowColor#
DynamicVariables=1

[WindowBackground]
Meter=Image
SolidColor=#WindowBackgroundColor#
X=2r
Y=2r
W=#WindowWidth#
H=#WindowHeight#
DynamicVariables=1
LeftMouseDoubleClickAction=[]
MiddleMouseUpAction=[]

[WindowTitle]
Meter=String
SolidColor=#TitleBarBackgroundColor#
X=(#WindowWidth# / 2)r
Y=(#TitleBarHeight# / 2)r
W=#WindowWidth#
H=#TitleBarHeight#
Text=Search
FontSize=24
FontColor=#WindowTitleFontColor#
StringAlign=CenterCenter
AntiAlias=1
ClipString=1
DynamicVariables=1

@include=#@#shared\status\init.inc
