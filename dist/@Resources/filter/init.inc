[Script]
Measure=Script
ScriptFile=#@#filter\init.lua
UpdateDivider=-1

[Command]
Measure=Plugin
Plugin=RunCommand
Parameter=
State=Hide
OutputFile=
FinishAction=[]

@include=#@#colors.inc

[Variables]
WindowWidth=460
WindowHeight=288
BannerWidth=460
BannerHeight=215
TitleBarHeight=48
BottomButtonHeight=64
ScrollbarWidth=16
ButtonDiffX=-9
ButtonDiffY=-3
ButtonHeight=48

[WindowShadow]
Meter=Image
X=0
Y=0
W=(#WindowWidth# + 4)
H=(#WindowHeight# + 4)
SolidColor=#WindowShadowColor#
DynamicVariables=1

[WindowBackground]
Meter=Image
SolidColor=#WindowBackgroundColor#
X=2r
Y=2r
W=#WindowWidth#
H=#WindowHeight#
DynamicVariables=1
LeftMouseDoubleClickAction=[]
MiddleMouseUpAction=[]

[PageTitle]
Meter=String
SolidColor=#TitleBarBackgroundColor#
X=(#WindowWidth# / 2)r
Y=(#TitleBarHeight# / 2)r
W=#WindowWidth#
H=#TitleBarHeight#
Text=Filter
FontSize=24
FontColor=#WindowTitleFontColor#
StringAlign=CenterCenter
AntiAlias=1
ClipString=1
DynamicVariables=1

[SlotBackground]
Meter=Image
SolidColor=0,0,0,1
X=[WindowBackground:X]
Y=([WindowBackground:Y] + #TitleBarHeight#)
W=(#WindowWidth# - 3)
H=(5 * #ButtonHeight#)
MouseScrollUpAction=[!CommandMeasure "Script" "Scroll(-1)"]
MouseScrollDownAction=[!CommandMeasure "Script" "Scroll(1)"]
DynamicVariables=1

[Slot1Button]
Meter=Image
X=0r
Y=0r
W=(#WindowWidth# - [ScrollbarBackground:W])
H=#ButtonHeight#
DynamicVariables=1
SolidColor=#ButtonBaseColor#
MouseOverAction=[!CommandMeasure "Script" "MouseOver(1)"]
MouseLeaveAction=[!CommandMeasure "Script" "MouseLeave(1)"]
LeftMouseDownAction=[!CommandMeasure "Script" "MouseLeftPress(1)"]
LeftMouseUpAction=[!CommandMeasure "Script" "ButtonAction(1)"]

[Slot1Title]
Meter=String
Text=
X=6r
Y=15r
W=(#WindowWidth# - 30)
H=24
StringStyle=Bold
StringAlign=LeftCenter
FontSize=16
